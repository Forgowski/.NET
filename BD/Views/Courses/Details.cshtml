@model BD.Models.Course

@{
    ViewData["Title"] = "Details";
}
@{
    var isAdmin = User.IsInRole("Admin");
}
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
                Rate
        </dt>
        <dd class = "col-sm-10">
            @{
                        double rate = Model.Rate;
                        int votesNum = Model.VotesNum;

                        double result = votesNum != 0 ? Math.Round(rate / votesNum, 2) : 0;
                        @result
            }
        </dd>
    </dl>
</div>
<div id="articlesContainer" data-course-id="@Model.CourseId">
</div>
<script>
    var courseId = $('#articlesContainer').data('course-id');

    $.ajax({
        url: '/Articles/GetArticlesByCourseId',
        method: 'GET',
        data: {
            courseId: courseId
        },
        success: function (data) {
            $('#articlesContainer').html(data);
        },
        error: function (error) {
            console.error('Error fetching articles:', error);
        }
    });
</script>

<div>
    @if (isAdmin)
    {
        @Html.ActionLink("Edit", "Edit", new { id = @Model.CourseId })
    }


    <a asp-action="Index">Back to List</a>
</div>
