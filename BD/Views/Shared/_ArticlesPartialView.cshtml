@model List<Article>

@{
    var isAdmin = User.IsInRole("Admin");
    var isCourseBought = ViewBag.IsCourseBought ?? false;
   
}
<h2>
    Contents:
</h2>
<ol>
    @foreach (var article in Model)
    {
        <li>
            <span>@article.Title</span>
            
            @if (isCourseBought)
            {
                <span>|</span>
                <a asp-action="Details" asp-route-id="@article.Id">Read article</a>
            }
        @if (isAdmin)
        {
            <span>|</span>
            <a asp-action="Edit" asp-route-id="@article.Id">Edit</a>
            <span>|</span>
            <a asp-action="Delete" asp-route-id="@article.Id">Delete</a>
        }
        </li>

    }
</ol>
       

        
